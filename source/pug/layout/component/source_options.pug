mixin entel-match-slider(brand,model,img_path,src_img,extension,content, texte)
    .slider_options__match
        .text 
            h2 !{brand}
            p !{model}

        .img
            img(src=img_path + src_img + extension, srcset= img_path + src_img + '@2x' + extension + ' 2x,' + img_path + src_img + extension + ' 1x', alt=alt)
        
