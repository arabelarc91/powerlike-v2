mixin entel-options(profile,alt,img_path,src_img,extension,content)
    .slider_options__profile
        .tag 
            span !{profile}

        .icon
            img(src=img_path + src_img + extension, srcset= img_path + src_img + '@2x' + extension + ' 2x,' + img_path + src_img + extension + ' 1x', alt=alt)
        
        .content_info
            p !{content}

    //- +entel-options("gamer", "icon-gamer", "../../images/profile/","icon-gamer", ".png", "Lorem ipsum dolor sit amet consectetur adipisicing elit. Cum reprehenderit, consectetur, voluptas quis deleniti provident illo nemo eaque nostrum assumenda tempore, suscipit nisi incidunt aspernatur molestias. Iure ipsa cum minus!")

mixin range-slider(ide, classie, min, max, valu, name, question)
    div.range 
        p !{question}
        input(id=ide name=name class=classie type="range" min= min max=max value=valu)
        label(for= name) !{name}

