mixin entel-match(brand,model,img,alt,classie,src_img,extension,number_battery,battery,number_camera,camera,number_screen,screen,number_capacity,capacity,link,button)
    .slider_options__match
        h2 #[strong !{brand}] #[span !{model}]

        img(src= img, alt=alt)

        .feature 
            .feature__battery
                img(src=img_path + 'battery-white' + extension, srcset= img_path + 'battery-white' + '@2x' + extension + ' 2x,' + img_path + 'battery-white' + extension + ' 1x', alt=alt)
                span !{number_battery} #[br] !{battery}
            
